<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/_parentContainer">

    <ImageButton
            android:src="@android:drawable/ic_media_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_forwardButton"
            app:layout_constraintTop_toBottomOf="@+id/_urlTextView"
            android:layout_marginTop="40dp" android:layout_marginStart="29dp"
            app:layout_constraintStart_toEndOf="@+id/_backButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="214dp" android:layout_marginEnd="512dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:src="@android:drawable/ic_media_rew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_backButton"
            app:layout_constraintTop_toBottomOf="@+id/_urlTextView"
            android:layout_marginTop="40dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/_searchButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="214dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_search"
            android:layout_width="40dp"
            android:layout_height="43dp" android:id="@+id/_searchButton"
            app:layout_constraintTop_toBottomOf="@+id/_urlTextView"
            android:layout_marginTop="48dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="214dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/url"
            android:ems="10"
            android:id="@+id/_urlTextView"
            android:layout_marginEnd="504dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>