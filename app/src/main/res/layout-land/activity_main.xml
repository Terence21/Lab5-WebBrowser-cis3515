<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="352dp"
            android:layout_height="94dp"
            android:id="@+id/browser_control" app:layout_constraintTop_toBottomOf="@+id/page_control"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/page_viewer"
    >

    </FrameLayout>
    <FrameLayout
            android:layout_width="377dp"
            android:layout_height="301dp"
            android:id="@+id/page_viewer" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/page_control">

    </FrameLayout>
    <FrameLayout
            android:layout_width="352dp"
            android:layout_height="205dp"
            android:id="@+id/page_list" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/browser_control"
            app:layout_constraintEnd_toStartOf="@+id/page_viewer" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>
    <FrameLayout
            android:layout_width="733dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/page_control" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>